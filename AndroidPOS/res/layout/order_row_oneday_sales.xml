<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/one_sale_margin_20dp"
              android:layout_marginTop="@dimen/one_sale_margin_10dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/photo_size"
        android:layout_height="@dimen/photo_size"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/one_sale_text_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/filename"
            style="@style/FontMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_sale_margin_10dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/one_sale_text_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_sale_margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_tag"
                style="@style/FontMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="@string/number_tag"
                android:textSize="@dimen/one_sale_text_size"/>

            <TextView
                android:id="@+id/numberOfSales"
                style="@style/FontMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/one_sale_margin_10dp"
                android:fontFamily="sans-serif-thin"
                android:textSize="@dimen/one_sale_text_size"/>

        </LinearLayout>

        <TextView
            android:id="@+id/price"
            style="@style/FontMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/one_sale_text_size"/>
    </LinearLayout>

</LinearLayout>